      </xs:documentation>
    </xs:annotation>
    <xs:attribute name="Id" use="required" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="BleachingRegion">
    <xs:all>
      <xs:element name="Laserlines" minOccurs="0">
